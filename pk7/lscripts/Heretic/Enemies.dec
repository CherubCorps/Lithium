actor Lith_Heretic_Ophidian : Snake replaces Snake
{
   Health 500
   Speed 13
   Tag "Ophidian"
   
   +MISSILEMORE
   
   states
   {
   Missile:
      SNKE F 3 A_FaceTarget
   MissileLoop:
      SNKE FFF 4 A_CustomMissile("SnakeProjA", 32, 0, 0, CMF_CHECKTARGETDEAD)
      SNKE F 6 A_FaceTarget
      SNKE F 0 A_MonsterRefire(40, "MissileLoopDone")
      SNKE F 0 A_Jump(128, "MissileLoopDone")
      loop
   MissileLoopDone:
      SNKE F 6 A_FaceTarget
      SNKE F 2 A_CustomMissile("SnakeProjB", 32, 0, 0, CMF_CHECKTARGETDEAD)
      goto See
   Death:
      "####" "#" 0 ACS_NamedExecuteWithResult("Lith_EmitScore", Score_HellKnight)
      goto Super::Death
   }
}

