actor Lith_Dummy
{
   +NOTIMEFREEZE
   +ALWAYSPUFF
   +PUFFONACTORS
   +NOGRAVITY
   +BLOODLESSIMPACT

   states
   {
   Spawn:
      TNT1 A 1
      stop
   }
}

actor Lith_PlayerDummyPuff : Lith_Dummy
{
   Species "Lith_Player"
   DamageType "Lith_PlayerMissile"
   +DONTHARMSPECIES
}

actor Lith_DummyArmor : BasicArmorBonus {}

