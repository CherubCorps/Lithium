class Lith_CyberRocket : Rocket replaces Rocket
{
   default
   {
      DamageType "Lith_Shrapnel";
      Scale 0.75;
      Radius 8;
      Height 4;
      Speed 25;
      DamageFunction (15 * random(1, 8));
      DeathSound "explosion";
   }
   
   states
   {
   Spawn:
      MISL A 1 bright;
      loop;
   Death:
      MEXP A 0 A_Explode(96);
      MEXP AB 2 bright;
      MEXP CD 3 bright;
      MEXP EF 4 bright;
      stop;
   }
}

