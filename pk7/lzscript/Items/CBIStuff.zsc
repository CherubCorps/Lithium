class Lith_CBIItem : Inventory abstract;

mixin Lith_Pickup;

default {
   Inventory.PickupMessage "";
   Inventory.PickupSound "player/pickup/upgrcbi";
   Lith_CBIItem.Glow "Lith_UpgrGlow";

   +INVENTORY.ALWAYSPICKUP
}

private meta int m_upgName;

property UpgrName: m_upgName;

override void postBeginPlay() {
   super.postBeginPlay();
   Lith_PickupPostBeginPlay();
   ACS_NamedExecuteWithResult("Lith_CBIItemWasSpawned", m_upgName);
}

override void tick() {
   super.tick();
   Lith_PickupTick();
}

override bool tryPickup(in out Actor mo) {
   mo.acs_scriptCall("Lith_PickupCBIItem", m_upgName);
   goAwayAndDie();
   return true;
}

