actor Lith_Heretic_Key : Lith_CustomInventory
{
   Radius 20
   Height 16
   Inventory.PickupSound "misc/k_pkup"
   
   +NOTDMATCH
}

actor Lith_Heretic_KeyBlue : Lith_Heretic_Key replaces KeyBlue
{
   states
   {
   Spawn:
      BKYY ABCDEFGHIJ 3 bright
      loop
   Pickup:
      TNT1 A 0 ACS_NamedExecuteAlways("Lith_LogName", 0, msg_bluecard)
      TNT1 A 0 A_GiveInventory("KeyBlue")
      stop
   }
}

