actor Lith_XH_ImpBall : Lith_ImpBall
{
   Speed 24
   FastSpeed 48
}

actor Lith_XH_Imp : Lith_Imp
{
   Speed 8
   Health 80
   MinMissileChance 140
   
   +MISSILEMORE
   
   states
   {
   See:
      TROO AAABBBCCCDDD 1 A_Chase
      loop
   Melee:
   Missile:
      TROO EF 6 A_FaceTarget
      TROO G 5 A_CustomComboAttack("Lith_XH_ImpBall", 32, 3 * random(1, 8), "imp/melee")
      TROO G 2
      goto See
   }
}

