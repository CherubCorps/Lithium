actor Lith_Heretic_DSparilDiscipleSpawner : Sorcerer2FX2 replaces Sorcerer2FX2
{
   Species "Lith_IAmAWizard"
   
   +MTHRUSPECIES
   
   var int user_wizards;
   
   states
   {
   Spawn:
      FX11 A 35 bright
   SpawnLoop:
      FX11 B 5 bright A_SpawnItemEx("Wizard")
      FX11 A 15 bright A_SetUserVar("user_wizards", user_wizards + 1)
      FX11 A 0 bright A_JumpIf(user_wizards == 3, "Death")
      loop
   Death:
      FX11 BCDEFG 5 bright
      stop
   
   }
}

