   Death:
      MEXP A 0 A_ChangeFlag("NOGRAVITY", true)
      
      MEXP A 0 A_JumpIf(CallACS("Lith_GetPlayerData", pdata_upgrade, UPGR_7777777, true), 3)
      MEXP A 0 A_PlaySound("explosion", 6)
      MEXP A 0 A_Jump(256, 2)
      MEXP A 0 A_PlaySound("marathon/explode", 6)
      
      MEXP A 0 A_Explode
      MEXP AB 2 bright
      MEXP CD 3 bright
      MEXP EF 4 bright
      Stop
   }
}

