actor Lith_Coin : Lith_ScoreItem
{
   Lith_ScoreItem.Score 50
   Lith_BasicPickup.LogName "Coin", 2
   Inventory.PickupSound "player/pickup/coin"
   Scale 0.3
   Radius 10

   +LITH_BASICPICKUP.VACUUM

   states
   {
   Spawn:
      SCOR H -1 bright
      stop
   }
}

