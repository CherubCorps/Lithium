actor Lith_RifleGrenade
{
   Radius 8
   Height 8
   Speed 25
   Damage 20
   BounceType "Doom"
   BounceCount 2
   Gravity 0.5
   BounceSound "weapons/rifle/grenadebounce"
   Species "Lith_Player"
   DamageType "Lith_Shrapnel"
   
   Projectile
   +MTHRUSPECIES
   +EXPLODEONWATER
   -NOGRAVITY
   
   states
   {
   Spawn:
      SGRN A 2 bright A_SpawnItemEx("Lith_RifleGrenadeSmoke", -8)
